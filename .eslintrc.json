{
  "extends": "xo",
  "env": {
    "browser": true
  },
  "rules": {
    // The following rules differ from the xo style guide.
    "indent": [2, 2, {
      "SwitchCase": 1
    }],
    "linebreak-style": [2, "windows"],
    "max-len": [1, 120, 2, {
      "ignoreComments": true,
      "ignoreUrls": true
    }],
    "no-negated-condition": 0,
    "one-var": [0] // disable this for now
  }
}
